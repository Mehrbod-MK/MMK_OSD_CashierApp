<Window x:Class="MMK_OSD_CashierApp.Views.Window_InputForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MMK_OSD_CashierApp.Views"
        mc:Ignorable="d"
        Title="Window_InputForm" Height="400" Width="300"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        FlowDirection="RightToLeft">
    <Window.Background>
        <LinearGradientBrush>
            <GradientStop Color="SkyBlue" Offset="0.6"/>
            <GradientStop Color="LightBlue"/>
        </LinearGradientBrush>
    </Window.Background>

    <Border BorderThickness="2" BorderBrush="Black">
        <GroupBox x:Name="GroupBox_Main">

            <StackPanel x:Name="StackPanel_Main">

                <TextBlock x:Name="TextBlock_Title" FontSize="23" TextWrapping="Wrap" FontWeight="ExtraBold" Text="{Binding Form_Title, UpdateSourceTrigger=PropertyChanged, FallbackValue=عنوان فرم}"/>

                <StackPanel x:Name="StackPanel_Fields"/>

                
                
            </StackPanel>

        </GroupBox>
    </Border>
    
</Window>
